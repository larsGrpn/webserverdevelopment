doctype html 
html(lang='de')
    head 
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title Dokument
        style.
            body {
                background-color: #f2f2f2;
                font-family: Arial, sans-serif;
            }
            div {
                margin: 0 auto;
                width: 80%;
                background-color: white;
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            h1 {
                color: #333;
                text-align: center;
            }
            h2 {
                color: #333;
                text-align: center;
            }

            form {
                margin-top: 20px;
                text-align: center;
            }

            input[type="file"] {
                display: block;
                margin: 0 auto;
                padding: 10px;
            }
            input[type="file"]::file-selector-button {
                background-color: #ffc107;
                color: white;
                border: none;
                cursor: pointer;
                border-radius: 10px;
            }
            input[type="file"]::file-selector-button:hover {
                background-color: #ff9800;
            }
            input[type="submit"] {
                display: block;
                margin: 20px auto;
                padding: 10px 20px;
                background-color: #ffc107;
                color: white;
                border: none;
                cursor: pointer;
                border-radius: 10px;
            }

            input[type="submit"]:hover {
                background-color: #ff9800;
            }
    body
        h1="Dateinspeicher von: " + nutzer
        div
            each file in speicher 
                div= file
        h2 Datei hochladen
        form(action='fileupload', method='post', enctype='multipart/form-data')
            input(type='file', name='file')
            input(type='submit', value='Neue Datei Hochladen')
